<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/register_ID"
        android:layout_width="74dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="355dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="253dp"
        android:layout_marginBottom="7dp"
        android:text="Register"
        android:textColor="#AA3939"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="332dp"
        android:text="You are not a member?"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/forget_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="526dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="29dp"
        android:text="Forget password?"
        android:textAlignment="center"
        android:textColor="#933131"
        android:textSize="16sp"
        android:textStyle="normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/mainBackground"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="124dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="472dp"
            android:layout_marginBottom="135dp"
            app:srcCompat="@drawable/vworld" />

        <ImageView
            android:id="@+id/back_ID"
            android:layout_width="37dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="609dp"
            android:layout_marginBottom="248dp"
            app:srcCompat="@drawable/left" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="232dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="414dp"
            android:layout_marginBottom="65dp"
            android:text="Hello There!"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="320dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_layout">

            <EditText
                android:id="@+id/email_ID"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_txt_edit"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textColorHint="#384E53"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password_ID"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="110dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/login_txt_edit"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColorHint="#384E53"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/remember_ID"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="31dp"
                android:text="Remember Me?"
                android:textColor="#384E53"
                android:textColorHighlight="@color/mainBackground"
                android:textColorLink="@color/mainBackground"
                android:textCursorDrawable="@color/mainBackground" />

            <Button
                android:id="@+id/loginbtn_ID"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="239dp"
                android:background="@drawable/btn_login"
                android:text="Log In"
                android:textColor="#FFF"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>