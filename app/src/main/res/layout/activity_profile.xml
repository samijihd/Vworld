<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="@drawable/profile_grad">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/left_arrow_white"
            android:contentDescription="TODO" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_below="@id/user_name_profile"
                android:id="@+id/user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="20sp"
                android:textColor="@color/gray"
                />

            <TextView
                android:id="@+id/user_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/under_profile_header"
        android:layout_below="@id/profile_header"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="170dp">

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="210dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Job Title"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_title"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="Adrress"/>

            <Button
                android:layout_below="@id/address"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="contact"
                android:textColor="#433F7E"
                android:textSize="16sp"
                android:background="@drawable/contact_btn_stroke"/>

        </RelativeLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/profile_header"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="40dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/white"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@id/under_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews" />
    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>