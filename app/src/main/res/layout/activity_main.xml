<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/register_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/textView4"
                android:layout_marginStart="5dp"
                android:text="@string/register"
                android:textColor="#AA3939"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/you_are_not_a_member"
                android:textSize="15sp" />

        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/profile_grad">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="260dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/vworld" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="15dp"
            android:padding="20dp"
            android:layout_below="@id/imageView">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textColor="#FFF"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@id/welcome"
                android:id="@+id/nice_to_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nice to see again!"
                android:textColor="#95A7BD"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/login_ID"
                android:layout_below="@id/nice_to_see"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_login"
                android:text="Log In"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="normal" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>